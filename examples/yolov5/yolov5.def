Bootstrap: docker
From: nvidia/cuda:11.3.1-cudnn8-runtime-ubuntu20.04

%post
    # Install CUDA dependencies and libraries
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y \
        git \
        python3 \
        python3-pip \
        libsm6 \
        libxext6 \
        libxrender-dev \
        libgl1-mesa-glx \
        libglib2.0-0 \
        wget \
        unzip

    # Clone YOLOv5 repository
    git clone https://github.com/ultralytics/yolov5 /yolov5
    pip3 install -r /yolov5/requirements.txt

   
    mkdir -p /datasets 
    wget -P /datasets https://ultralytics.com/assets/coco128.zip
    unzip /datasets/coco128.zip -d /datasets

%runscript
  
    # Use the environment variables set in the batch script
    python3 /yolov5/train.py --data /yolov5/data/coco128.yaml --epochs "$EPOCHS" --weights "$WEIGHTS" --img "$IMG" --batch-size "$BATCH_SIZE" --cfg /yolov5/models/yolov5m.yaml --project "$TMPDIR"/train_result